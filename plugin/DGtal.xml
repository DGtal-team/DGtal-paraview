<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Remoting/Application/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy name="DGtal::ComputeIICurvature" class="DGtalComputeIICurvature" label="DGtal::ComputeIICurvature">
     <Documentation
        long_help="Compute normals of a digital surface"
        short_help="Compute normals of a digital surface">
     </Documentation>
    
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataSet"/>
           </DataTypeDomain>
      </InputProperty>

      <IntVectorProperty
        name="Mean Curvature"
        command="SetComputeMean"
        number_of_elements="1"
        default_values="1">
        <BooleanDomain name="bool" />
      </IntVectorProperty>

      <IntVectorProperty
        name="Gaussian Curvature"
        command="SetComputeGaussian"
        number_of_elements="1"
        default_values="1">
        <BooleanDomain name="bool" />
      </IntVectorProperty>

     <IntVectorProperty
        name="Principal Curvature"
        command="SetComputePrincipal"
        number_of_elements="1"
        default_values="0">
        <BooleanDomain name="bool" />
      </IntVectorProperty>

   </SourceProxy>
  </ProxyGroup>



 <ParaViewFilters>
   <Category name="Plugins">
     <Category name="DGtal">
       <Proxy group="filters" name="DGtal::ComputeNormals" />
     </Category>
   </Category>
 </ParaViewFilters>
</ServerManagerConfiguration>
